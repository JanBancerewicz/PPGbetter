<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.projekcik.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="16dp" />

        <!-- Camera View -->
        <FrameLayout
            android:id="@+id/layout_camera_preview"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#000000"
            android:layout_marginBottom="24dp">

            <com.example.projekcik.javaViewCameraControl
                android:id="@+id/HelloOpenCvView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                opencv:show_fps="true"
                opencv:camera_id="any" />
        </FrameLayout>

        <!-- Data Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/data1_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Data1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/data2_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Data2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/data3_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Data3"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Data Value Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/data1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/data2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/data3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Toggle Button -->
        <Button
            android:id="@+id/buttonToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Measurement"
            android:onClick="onToggleRecording"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp" />

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </LinearLayout>
</ScrollView>
